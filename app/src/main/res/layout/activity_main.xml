<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36459E"
    android:backgroundTint="#36459E"
    android:foregroundTint="#6DC5BC"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/start"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="90dp"
        android:layout_height="67dp"
        android:backgroundTint="#36459E"
        android:clickable="true"
        android:contentDescription="@string/bottom_sheet_behavior"
        android:onClick="start"
        android:saveEnabled="false"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintVertical_bias="0.037"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:tint="#050505" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Click bottom to start connection"
        android:textAlignment="center"
        android:textColor="#F4F0F6"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <EditText
        android:id="@+id/message"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:ems="10"
        android:text="Name"
        android:inputType="textNoSuggestions"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="156dp"
        android:layout_height="39dp"
        android:text="Enter message "
        android:textColor="#070000"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1"
        app:layout_constraintVertical_bias="0.203" />

    <Button
        android:id="@+id/sendb"
        android:layout_width="108dp"
        android:layout_height="54dp"
        android:background="#6AC5BC"
        android:backgroundTint="#6DC5BC"
        android:clickable="true"
        android:foregroundTint="#7ACFC7"
        android:onClick="send"
        android:text="Send"
        android:textColor="#0B0404"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message"
        app:layout_constraintVertical_bias="0.101" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="321dp"
        android:layout_height="127dp"
        android:background="#AE94DC"
        android:text="output"
        android:textColor="#090909"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text4"
        app:layout_constraintVertical_bias="0.264" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="127dp"
        android:layout_height="28dp"
        android:text="Output :"
        android:textColor="#040303"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.648" />

</androidx.constraintlayout.widget.ConstraintLayout>